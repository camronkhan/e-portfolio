<div class="page blog container">
	<h1 class="page-title"><%= @post.title %></h1>
	<div>
		<p id="notice"><%= notice %></p>

		<p>
		  <strong>Image url:</strong>
		  <%= @post.image_url %>
		</p>

		<p>
		  <strong>Body:</strong>
		  <%= @post.body %>
		</p>

		<%= link_to 'Edit', edit_post_path(@post) %> |
		<%= link_to 'Back', posts_path %>
	</div>
</div>
